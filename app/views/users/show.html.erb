<div class="card text-center">
  <div class="card-header">
    <%= @user.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @user.email %></h5>
    <%= link_to 'Home', root_path, class:'btn btn-primary' %>
  </div>
  <div class="card-footer text-muted">
    <p class="card-text"><%= "#{@my_sales.count} productos vendidos"%></p>
  </div>
</div>
<% if current_user == @user && @my_sales.any? %>
<h3>Todos mis productos vendidos:</h3>
<div class="card-columns">
<% @my_sales.each do |sale| %>
    <div class="card p-3">
      <blockquote class="blockquote mb-0 card-body">
        <p><%= "Venta##{sale.id}"%></p>
        <h4><%= sale.product.name %></h4>
        <h5>Comprador: <%= link_to sale.user.name, user_path(sale.user) %></h5>
        <h6><%= "Total: $#{sale.product.price}" %></h6>
        <footer class="blockquote-footer">
          <br>
          <%= link_to 'Show', sale.product, class:'card-link', class:'btn btn-info btn-sm' %>
        </footer>
      </blockquote>
    </div>

  <% end %>
<% end %>
